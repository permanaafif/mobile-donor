<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/foto_profile"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bulet"
                android:src="@drawable/baseline_person_24"/>

            <LinearLayout
                android:id="@+id/ll_profile"
                android:layout_toRightOf="@id/foto_profile"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Afif"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tanggal_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Di upload 1 menit lalu"
                    android:fontFamily="@font/poppins"
                    android:textSize="10sp"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_favorit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/baseline_simpan_post" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"/>

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lorem"
                android:justificationMode="inter_word"
                android:maxLines="4"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/textButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selengkapnya"
                android:clickable="true"
                android:textColor="@color/blue"
                android:justificationMode="inter_word"
                android:maxLines="4"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:src="@drawable/ic_launcher_background" />
        </LinearLayout>

        <View
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_comment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/baseline_chat_bubble_outline_24" />

            <TextView
                android:id="@+id/tv_jumlah_comment"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Comments"
                android:fontFamily="@font/poppins"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
